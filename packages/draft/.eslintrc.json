{
  "extends": [
    "eslint-config-kyt"
  ],

  "rules": {
    "import/no-restricted-paths": "off",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id", "__typename", "__APOLLO_STATE__"] }]
  },

  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
