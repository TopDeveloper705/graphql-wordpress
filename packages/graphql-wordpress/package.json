{
  "name": "@wonderboymusic/graphql-wordpress",
  "version": "0.0.2-2",
  "description": "GraphQL server for the WordPress REST API",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/staylor/graphql-wordpress"
  },
  "author": "staylor",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cli-color": "^1.2.0",
    "cookie-parser": "^1.4.3",
    "dataloader": "^1.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.7",
    "graphql-relay": "^0.5.3",
    "graphql-tools": "^2.5.0",
    "redis": "^2.8.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-module-resolver": "^3.0.0-beta",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-kyt": "^0.4.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-babel-module": "^4.0.0-beta.5",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest-cli": "^21.2.1",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "prettier-eslint": "^8.2.1",
    "prettier-eslint-cli": "^4.4.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "clean": "rimraf lib",
    "dev": "nodemon --delay 2 --exec babel-node src/server.js",
    "prod": "npm run build && npm run start",
    "build": "npm run clean && babel --ignore __tests__,__mocks__ src -d build",
    "start": "NODE_ENV=production pm2 start --name \"graphql-wordpress\" build/server.js -i 1",
    "test": "jest",
    "update-schema": "babel-node updateSchema.js",
    "clear-cache": "redis-cli FLUSHALL",
    "prettier": "prettier-eslint \"src/**/*.js\" --write",
    "prepare": "npm run build"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/public/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/jest/",
      "<rootDir>/src/server",
      "<rootDir>/src/middleware/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ]
  }
}
